<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/TITLE_AREA"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/topBtnBack"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="gone"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/top_btn_back"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:clickable="true"
            android:contentDescription="@string/dummy_back"
            android:focusable="true"
            android:onClick="onClick"
            tools:src="@drawable/ic_title_back" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_toEndOf="@+id/topBtnBack"
        android:gravity="center_horizontal"
        android:paddingEnd="36dp"
        tools:ignore="RtlSymmetry">

        <TextView
            android:id="@+id/topContentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/ATTRACTION_DESCIPTION"
            android:textSize="19sp"
            android:textStyle="bold"
            android:text="@string/dummy_title"
            tools:text="@string/dummy_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btnSelectedCountry"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:gravity="center_horizontal|center_vertical"
        android:visibility="gone"
        tools:ignore="RtlHardcoded"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/ivSelectedCountry"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClick"
            android:src="@drawable/ic_launcher_background" />
    </LinearLayout>
</RelativeLayout>
