<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.AttractionDetailFragment">

    <WebView
        android:id="@+id/attractionWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BACKGROUND_AREA"
        android:clickable="true"
        android:focusable="true">

        <include
            android:id="@+id/attractionDetailTitleArea"
            layout="@layout/view_title_area"
            android:layout_width="0dp"
            android:layout_height="56dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scrollbars="vertical"
            android:theme="@style/ScrollEdgeEffect"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/attractionDetailTitleArea">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="30dp">

                <TextView
                    android:id="@+id/txt_preview"
                    style="@style/subHeader"
                    android:layout_height="26dp"
                    android:maxLines="1"
                    android:text="Photos"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:alpha="0.4"
                    android:background="@color/SUB_HEADER"
                    app:layout_constraintBottom_toBottomOf="@id/txt_preview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txt_preview"
                    app:layout_constraintTop_toTopOf="@id/txt_preview" />

                <ImageView
                    android:id="@+id/imgPreviewThumbnail"
                    android:layout_width="0dp"
                    android:layout_height="166dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/attractions_preview"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txt_preview"
                    app:layout_constraintWidth_max="296dp" />

                <TextView
                    android:id="@+id/txtInfo"
                    style="@style/subHeader"
                    android:layout_height="26dp"
                    android:layout_marginTop="10dp"
                    android:maxLines="1"
                    android:text="Information"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imgPreviewThumbnail" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:alpha="0.4"
                    android:background="@color/SUB_HEADER"
                    app:layout_constraintBottom_toBottomOf="@id/txtInfo"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtInfo"
                    app:layout_constraintTop_toTopOf="@id/txtInfo" />

                <TextView
                    android:id="@+id/txtAttractionName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/ATTRACTION_DESCIPTION"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtInfo"
                    tools:text="@string/dummy_attraction_name" />

                <TextView
                    android:id="@+id/txtAttractionDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:fontFamily="sans-serif"
                    android:lineSpacingExtra="8dp"
                    android:textColor="@color/ATTRACTION_DESCIPTION"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtAttractionName"
                    tools:text="@string/dummy_attraction_des" />

                <TextView
                    android:id="@+id/txtAttractionUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:autoLink="web"
                    android:fontFamily="sans-serif"
                    android:textColor="#ff3695dd"
                    android:textColorLink="#ff3695dd"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtAttractionDescription"
                    tools:text="@string/dummy_attraction_url" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/txtAttractionUrl" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>