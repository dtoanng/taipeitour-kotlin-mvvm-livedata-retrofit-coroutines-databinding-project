<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width= "150dp"
        android:padding="7dp"
        android:paddingBottom="7dp"
        android:layout_height="40dp"
        android:layout_margin="2dp"
        android:background="@drawable/layout_background_item">

        <ImageView
            android:id="@+id/ivCountry"
            android:layout_width="25dp"
            android:layout_height="25dp"
            tools:src="@drawable/vi"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/glCountry"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/glCountry"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/SUB_HEADER"
            android:textSize="15sp"
            tools:text="Vietnamese"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/glCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.35"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>